# =================================================================
# STORY PROTOCOL MONITOR BOT - KONFIGURACJA
# =================================================================

# OBOWIĄZKOWE - Token bota Telegram (uzyskaj od @BotFather)
# Przykład: 1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ-1234567890

# =================================================================
# RPC STORY PROTOCOL - BLOCKCHAIN CONNECTION
# =================================================================

# Główny endpoint RPC Story Protocol
STORY_RPC_URL=https://mainnet.storyrpc.io

# Zapasowe endpointy RPC (oddzielone przecinkami)
STORY_RPC_FALLBACK_URLS=https://rpc.story.foundation,https://story-rpc.quicknode.com,https://rpc.ankr.com/story

# Timeout połączenia RPC (milisekundy)
RPC_TIMEOUT=10000

# Maksymalne próby reconnect
RPC_MAX_RETRIES=3

# =================================================================
# ALERTY WIELORYBÓW - WHALE MONITORING
# =================================================================

# Domyślny próg wieloryba (IP tokeny)
DEFAULT_WHALE_THRESHOLD=40

# Okno czasowe dla nowych tokenów (godziny) - priorytetowe alerty
NEW_TOKEN_WINDOW_HOURS=4

# Minimalna kwota dla alertów ogólnych (IP)
MIN_WHALE_AMOUNT=25

# Maksymalne alerty wielorybów na godzinę (anti-spam)
MAX_WHALE_ALERTS_PER_HOUR=50

# =================================================================
# MONITOROWANIE - PERFORMANCE SETTINGS
# =================================================================

# Interwał sprawdzania nowych IP assets (milisekundy)
MONITORING_INTERVAL=30000

# Interwał sprawdzania wielorybów (milisekundy)
WHALE_MONITORING_INTERVAL=25000

# Interwał sprawdzania ogólnych transakcji (milisekundy)
GENERAL_MONITORING_INTERVAL=45000

# Rozmiar paczki przy procesowaniu (transactions per batch)
BATCH_SIZE=10

# Timeout dla requestów HTTP (milisekundy)
REQUEST_TIMEOUT=15000

# Opóźnienie między alertami dla użytkowników (milisekundy)
ALERT_DELAY=100

# =================================================================
# BAZA DANYCH - DATABASE SETTINGS
# =================================================================

# Ścieżka do pliku bazy danych SQLite
DB_PATH=./data/bot.db

# Backup bazy danych (automatyczny co X godzin)
DB_BACKUP_INTERVAL=24

# Ścieżka do backupów
DB_BACKUP_PATH=./data/backups/

# Czyszczenie starych danych (dni)
DB_CLEANUP_DAYS=30

# =================================================================
# LOGI - LOGGING CONFIGURATION
# =================================================================

# Level logowania (error, warn, info, debug)
LOG_LEVEL=info

# Plik z logami
LOG_FILE=./logs/bot.log

# Maksymalny rozmiar pliku loga (MB)
LOG_MAX_SIZE=50

# Ilość plików logów do zachowania
LOG_MAX_FILES=5

# Czy logować do konsoli (true/false)
LOG_TO_CONSOLE=true

# =================================================================
# TELEGRAM BOT - BOT CONFIGURATION
# =================================================================

# Webhook URL (jeśli używasz webhooks zamiast polling)
# WEBHOOK_URL=https://yourdomain.com/webhook

# Port dla webhooks
# WEBHOOK_PORT=3000

# Tryb polling vs webhooks (polling/webhook)
BOT_MODE=polling

# Maksymalna liczba prób wysłania wiadomości
MAX_MESSAGE_RETRIES=3

# =================================================================
# STORYSCAN INTEGRATION
# =================================================================

# URL do Storyscan (blockchain explorer)
STORYSCAN_URL=https://www.storyscan.io

# API endpoint Storyscan (jeśli dostępny)
STORYSCAN_API_URL=https://api.storyscan.io

# Timeout dla requestów do Storyscan
STORYSCAN_TIMEOUT=8000

# =================================================================
# RATE LIMITING - OGRANICZENIA REQUESTÓW
# =================================================================

# Maksymalne requesty na minutę do RPC
RPC_RATE_LIMIT=60
SERVER_MODE=true
# Maksymalne alerty na godzinę (globalnie)
MAX_ALERTS_PER_HOUR=200

# Maksymalne alerty na użytkownika (na godzinę)
MAX_USER_ALERTS_PER_HOUR=20

# Cooldown między alertami tego samego typu (sekundy)
ALERT_COOLDOWN=30

# =================================================================
# FEATURES - WŁĄCZ/WYŁĄCZ FUNKCJE
# =================================================================

# Monitorowanie nowych IP assets (true/false)
ENABLE_IP_MONITORING=true

# Monitorowanie wielorybów (true/false)
ENABLE_WHALE_MONITORING=true

# Alerty dla nowych tokenów (priorytetowe)
ENABLE_NEW_TOKEN_ALERTS=true

# Analiza portfeli (true/false)
ENABLE_WALLET_ANALYSIS=true

# Mock dane gdy RPC nie działa (true/false)
ENABLE_MOCK_DATA=true

# Debug mode - więcej logów (true/false)
DEBUG_MODE=false

# =================================================================
# SECURITY - USTAWIENIA BEZPIECZEŃSTWA
# =================================================================

# Lista dozwolonych chat IDs (oddzielone przecinkami, puste = wszystkie)
# ALLOWED_CHAT_IDS=123456789,987654321

# Lista administratorów bota (user IDs)
# ADMIN_USER_IDS=123456789,555666777

# Czy wymuszać użycie username w Telegram
REQUIRE_USERNAME=false

# Maksymalna liczba użytkowników
MAX_USERS=10000

# =================================================================
# ADVANCED SETTINGS - USTAWIENIA ZAAWANSOWANE
# =================================================================

# Environment (development/production)
NODE_ENV=production

# Timezone
TZ=Europe/Warsaw

# Memory limit dla Node.js (MB)
NODE_MAX_MEMORY=512

# Czy używać WebSocket dla RPC (jeśli dostępny)
USE_WEBSOCKET=false

# Retry exponential backoff
RETRY_EXPONENTIAL_BASE=2

# Cache TTL dla transakcji (sekundy)
CACHE_TTL=300

# =================================================================
# OPTIONAL INTEGRATIONS - OPCJONALNE INTEGRACJE
# =================================================================

# Discord webhook dla alertów (opcjonalne)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Slack webhook (opcjonalne)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook

# Email notifications (opcjonalne)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Analytics tracking (opcjonalne)
# ANALYTICS_ENABLED=false
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =================================================================
# ALERTS CUSTOMIZATION - PERSONALIZACJA ALERTÓW
# =================================================================

# Emoji dla różnych typów alertów
EMOJI_NEW_IP=🆕
EMOJI_WHALE_BUY=💰
EMOJI_WHALE_SELL=💸
EMOJI_BURN=🔥
EMOJI_WARNING=⚠️

# Prefiksy wiadomości
MSG_PREFIX_NEW_IP=[NEW IP]
MSG_PREFIX_WHALE=[WHALE]
MSG_PREFIX_BURN=[BURN]

# Język alertów (pl/en)
ALERT_LANGUAGE=pl

# Format daty w alertach
DATE_FORMAT=DD.MM.YYYY HH:mm:ss

# =================================================================
# MONITORING & HEALTH CHECK
# =================================================================

# Port dla health check endpoint
HEALTH_CHECK_PORT=3001

# Czy włączyć health check endpoint
ENABLE_HEALTH_CHECK=true

# Interwał health check (sekundy)
HEALTH_CHECK_INTERVAL=60

# Metryki Prometheus (jeśli używane)
ENABLE_METRICS=false
METRICS_PORT=9090

# =================================================================
# DEVELOPMENT SETTINGS - TYLKO DO TESTÓW
# =================================================================

# Częstotliwość generowania mock danych (procent 0-100)
MOCK_DATA_FREQUENCY=15

# Test mode - nie wysyła rzeczywistych alertów
TEST_MODE=false

# Verbose logging
VERBOSE=false

# =================================================================
# BACKUP & MAINTENANCE - BACKUP I KONSERWACJA
# =================================================================

# Automatyczne backupy (true/false)
AUTO_BACKUP=true

# Godzina daily backup (format HH:MM)
BACKUP_TIME=03:00

# Lokalizacja external backup (opcjonalnie)
# EXTERNAL_BACKUP_PATH=/mnt/backup/story-bot/

# Czy kompresować backupy
COMPRESS_BACKUPS=true

# Automatyczne czyszczenie starych logów (true/false)
AUTO_LOG_CLEANUP=true

# =================================================================
# KONIEC KONFIGURACJI
# =================================================================

# Uwagi:
# - Nigdy nie udostępniaj publicznie pliku .env!
# - Backup regularnie plik .env
# - Przetestuj konfigurację przed produkcją
# - Monitoruj logi pod kątem błędów
#
# Dla większości użytkowników wystarczy ustawić tylko:
# - BOT_TOKEN (obowiązkowe)
# - DEFAULT_WHALE_THRESHOLD (opcjonalne, domyślnie 40)
#
# Pozostałe ustawienia mają sensowne domyślne wartości.